<p id="notice"><%= notice %></p>

<h1>Listing Friends</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Birthday</th>
      <th>Person</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
      <tr>
        <td><%= friend.name %></td>
        <td><%= friend.birthday %></td>
        <td><%= friend.person.name %></td>
        <td><%= link_to 'Show', person_people_friend_path(@person,friend) %></td>
        <td><%= link_to 'Edit', edit_friend_path(@person,friend) %></td>
        <td><%= link_to 'Destroy', person_people_friend(@person,friend), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Friend', new_person_people_path(@person) %>
