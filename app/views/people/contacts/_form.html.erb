<%= form_for([@person, @friend, @contact], :html => {:class => 'ui form'}) do |f| %>

<div class="field">
  <%= f.label :tipo %><br>
  <%= f.text_field :tipo %>
</div>
<div class="field">
  <%= f.label :valor %><br>
  <%= f.text_field :valor %>
</div>
<div class="ui one column centered grid panel-buttons">
  <div class="actions ui buttons">
    <%= link_to 'Back', person_friend_path(@person, @friend), :class => "ui button" %>
    <div class="or"></div>
    <%= f.submit :class => "ui positive button" %>
  </div>
</div>


<% end %>
