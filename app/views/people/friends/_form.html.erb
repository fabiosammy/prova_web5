<%= form_for([@person, @friend], :html => {:class => 'ui form'}) do |f| %>

<div class="field">
  <%= f.label :name %><br>
  <%= f.text_field :name %>
</div>
<div class="field">
  <%= f.label :birthday %><br>
  <%= f.date_select :birthday %>
</div>
<div class="actions">
  <%= f.submit %>
</div>

<% end %>
