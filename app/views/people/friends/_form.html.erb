<%= form_for([@person, @friend], :html => {:class => 'ui form'}) do |f| %>

<div class="field">
  <%= f.label :name %><br>
  <%= f.text_field :name %>
</div>
<div class="field">
  <%= f.label :birthday %><br>
  <%= f.date_select :birthday %>
</div>
<div class="ui one column centered grid panel-buttons">
  <div class="actions ui buttons">
    <%= link_to 'Back', person_path(@person), :class => "ui button" %>
    <div class="or"></div>
    <%= f.submit :class => "ui positive button" %>
  </div>
</div>

<% end %>
