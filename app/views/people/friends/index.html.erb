<h1>Friends of <%= @person.name %></h1>

<table class="ui celled table">
	<thead>
		<th>Name</th>
		<th>Birthday</th>
        <th colspan="3">Actions</th>
	</thead>

	<tbody>
		<% @friends.each do |friend| %>
		<tr id="friend_<%= friend.id %>">
			<td><%= friend.name %></td>
			<td><%= friend.birthday %></td>
			<td><%= link_to 'Show', person_friend_path(@person, friend), remote: true %></td>
			<td><%= link_to 'Edit', edit_person_friend_path(@person, friend), remote: true %></td>
			<td><%= link_to 'Destroy', person_friend_path(@person, friend), method: :delete, data: { confirm: 'Tem certeza?' }, remote: true %></td>
		</tr>
		<% end %>
	</tbody>
</table>

<%= link_to 'New Friend', new_person_friend_path(@person), class: 'btn ui primary button', remote: true %>
<%= link_to 'Back', people_path, class: 'btn ui inverse button' %>

