<p id="notice"><%= notice %></p>

<div class="ui container">
  
  <div class="ui top attached ">
    <h2 class="ui center aligned icon header">
      <i class="circular text telephone icon"></i>
      Listando Os Telefones de <%= @person.name %>
    </h2>
    <%= link_to new_person_phone_path do %>
      <h3><i class="plus icon"></i> Adicionar Novo Telefone</h3>
    <% end %>
  </div>

<table class="ui celled table striped">
  <thead>
    <tr>
      <th>Number</th>
      <th>Contato Principal</th>
      <th colspan="3">Opções</th>
    </tr>
  </thead>

  <tbody>
    <% @phones.each do |phone| %>
      <tr>
        <td><%= phone.number %></td>
         <td><%= phone.default ? "Sim" : "Não" %></td>
        
        <td><%= link_to 'Show', person_phone_path(@person, phone), class: 'ui green button' %></td>
        <td><%= link_to 'Edit', edit_person_phone_path(@person, phone), class: 'ui yellow button' %></td>
        <td><%= link_to 'Destroy', person_phone_path(@person, phone),class: 'ui red button', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Voltar', person_path(@person.id) %>

