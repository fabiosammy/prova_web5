<h1>People::Phones#index</h1>
<p>Find me in app/views/people/phones/index.html.erb</p>

<p id="notice"><%= notice %></p>

<h1>Listing Phones</h1>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @phones.each do |phone| %>
      <tr>
        <td><%= phone.number %></td>
        
        <td><%= link_to 'Show', person_phone_path(@person, phone) %></td>
        <td><%= link_to 'Edit', edit_person_phone_path(@person, phone) %></td>
        <td><%= link_to 'Destroy', person_phone_path(@person, phone), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Phone', new_person_phone_path(@person) %>

