<i class="close icon"></i>
  <div class="header">
    Phones of <%= @person.name %>
  </div>
    <div class="content">
      <p id="notice"><%= notice %></p>
      <table class="ui celled table">
        <thead>
          <th>Number</th>
          <th>Default</th>
          <th colspan="3">Actions</th>
        </thead>

        <tbody>
          <% @phones.each do |phone| %>
          <tr id="phone_<%= phone.id %>">
            <td><%= phone.number %></td>
            <td><%= phone.default %></td>
            <td><%= link_to image_tag('details.png'), person_phone_path(@person, phone), remote: true %></td>
            <td><%= link_to image_tag('edit.png'), edit_person_phone_path(@person, phone), remote: true %></td>
            <td><%= link_to image_tag('delete.png'), person_phone_path(@person, phone), method: :delete, data: { confirm: 'Tem certeza?' }, remote: true %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>


  <div class="actions"> 
    <%= link_to 'New Phone', new_person_phone_path(@person), class: "btn ui primary button", remote: true %>
    <div class="ui black deny button">
      Back
    </div>
  </div>

