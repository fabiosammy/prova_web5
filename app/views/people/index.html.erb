<p id="notice"><%= notice %></p>

<h1>Listing People</h1>

<table class="ui celled table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Status</th>
      <th>Username</th>
      <th>Birthday</th>
      <th>Bio</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr id="people_<%= person.id %>">
        <td><%= person.name %></td>
        <td><%= person.status %></td>
        <td><%= person.username %></td>
        <td><%= person.birthday %></td>
        <td><%= person.bio %></td>
        <td><%= link_to image_tag('details.png'), person, remote: true %></td>
        <td><%= link_to image_tag('edit.png'), edit_person_path(person), remote:true %></td>
        <td><%= link_to image_tag('delete.png'), person, method: :delete, data: { confirm: 'Are you sure?' }, remote: true %></td>
      </tr>
    <% end %>
  </tbody>

  <tfoot>
    <tr>
      <th colspan="8">
      <div class="ui pagination menu">
        <a class="icon item">
          <i class="left chevron icon"></i>
        </a>
        <a class="item">1</a>
        <a class="item">2</a>
        <a class="item">3</a>
        <a class="item">4</a>
        <a class="icon item">
          <i class="right chevron icon"></i>
        </a>
      </div>
      </th>
    </tr>
  </tfoot>
</table>

<br>

<%= link_to 'New Person', new_person_path, class: "btn ui primary button" %>

