<div class="ui two column grid centered">
  <div class="column">
    <div class="ui raised segment">
    <a class="ui yellow right ribbon label">Listing People</a>
      <div class="column">
        <%= link_to '<i class="plus icon green"></i>'.html_safe, new_person_path, class: "ui icon button" %>
        <table class="ui celled table">
          <thead>
            <tr>
              <th>Name</th>
              <th>Status</th>
              <th>Username</th>
              <th>Birthday</th>
              <th>Bio</th>
              <th colspan="3">Actions</th>
            </tr>
          </thead>

          <tbody>
            <% @people.each do |person| %>
              <tr>
                <td><%= person.name %></td>
                <td><%= person.status %></td>
                <td><%= person.username %></td>
                <td><%= person.birthday %></td>
                <td><%= person.bio %></td>
                <td><%= link_to '<i class="unhide icon orange"></i>'.html_safe, person, class: "ui icon button" %></td>
                <td><%= link_to '<i class="edit icon blue"></i>'.html_safe, edit_person_path(person), class: "ui icon button" %></td>
                <td><%= link_to '<i class="remove icon red"></i>'.html_safe, person, method: :delete, data: { confirm: 'Are you sure?' }, class: "ui icon button" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
