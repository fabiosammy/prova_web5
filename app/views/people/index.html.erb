<p id="notice"><%= notice %></p>
<div class="ui top attached button">Listing People</div>

<table class="ui celled table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Status</th>
      <th>Username</th>
      <th>Birthday</th>
      <th>Bio</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr id="people_<%=person.id%>">
        <td><%= person.name %></td>
        <td><%= person.status %></td>
        <td><%= person.username %></td>
        <td><%= person.birthday %></td>
        <td><%= person.bio %></td>
        <td> <%= link_to 'Show', person, class: 'ui inverted green button', remote: true %></td>
        <td><%= link_to 'Edit', edit_person_path(person), class: 'ui inverted yellow button' %></td>
        <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' }, remote: true, class: 'ui inverted red button' %><td>   </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Person', new_person_path , class: 'ui inverted blue button' %> 
